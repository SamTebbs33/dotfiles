# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=~/.config/i3blocks/blocks/$BLOCK_NAME
separator_block_width=15
markup=pango

##################

[memory]
label=mem 
interval=1

[cpu]
label=cpu 
interval=1

[wifi]
label=
interval=5

[ethernet]
label=E:
interval=5

[bluetooth]
label=B:
interval=once

[audio]
label=
interval=once
signal=10

[monitor_manager]
interval=once

[playerctl]
interval=5
signal=2

[battery]
label=
instance=0
interval=30

[calendar]
instance=%a %d %B, %Y
interval=3600

[calendar]
instance=%H:%M     
interval=30
